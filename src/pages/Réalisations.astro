---
import { getCollection } from 'astro:content';

import BaseLayout from '../layouts/BaseLayout.astro';

import ContactCTA from '../components/ContactCTA.astro';
import PortfolioPreview from '../components/PortfolioPreview.astro';
import Hero from '../components/Hero.astro';
import Grid from '../components/Grid.astro';

const projects = (await getCollection('work')).sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);
---

<BaseLayout
  title="Mes réalisations | Iliane El amrani"
  description="Découvrez mes projets les plus récents"
>
  <div class="stack gap-20">
    <main class="wrapper stack gap-8">
      
     
		<h1 style="text-align:center;margin-bottom: 10px;margin-top: 50px;">Mes réalisations</h1>
		<p style="text-align:center; margin-bottom: 200px;">
			Vous retrouverez ici mes deux projets de fin d'année
		</p>
      
      {/* Add title above "system" and "network" rectangles */}
   
      <Grid variant="offset">
        {
          projects.map((project) => (
            <li>
              <PortfolioPreview project={project} />
            </li>
          ))
        }
      </Grid>
      
      {/* Add title above the two additional rectangles */}
      
      <Grid variant="offset">
        {/* Add two additional rectangles */}
        <li>
          {/* Content of the first additional rectangle */}
        </li>
        <li>
          {/* Content of the second additional rectangle */}
        </li>
      </Grid>
    </main>
    <ContactCTA />
  </div>
</BaseLayout>


	